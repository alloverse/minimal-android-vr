CC = @(ANDROID)/sdk/ndk-bundle/toolchains/llvm/prebuilt/@(HOST_TAG)/bin/clang

CFLAGS += --target=@(TARGET)
CFLAGS += -shared
CFLAGS += -Wl,--no-undefined
CFLAGS += -I@(VRAPI)/Include
CFLAGS += -L@(VRAPI)/Libs/Android/@(ABI)/Debug
CFLAGS += -lvrapi

: main.c |> $(CC) $(CFLAGS) %f -o %o |> libapp.so
